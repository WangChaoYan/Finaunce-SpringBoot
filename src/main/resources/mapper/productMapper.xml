<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itqf.dao.ProductMapper">
    
    <select id="selectProductById" resultType="com.itqf.domain.Product" parameterType="Integer">

        select * from product where pid=#{pid}

    </select>

    <select id="selectProduct" resultType="com.itqf.domain.Product">

        select * from product

    </select>

    <select id="selectProductByStatus" resultType="com.itqf.domain.Product" parameterType="Integer">

        select * from product where status=#{status}

    </select>

    <!--通过周期分类-->

    <select id="selectProductByDays" resultType="java.util.List" parameterType="Integer">

        select * from product where days=#{days}

    </select>



</mapper>